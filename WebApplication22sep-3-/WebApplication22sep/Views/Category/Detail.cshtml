@model WebApplication22sep.Models.EntityLayer.Category
@{
    ViewBag.Title = "Detail";
}

<h2>Category Details</h2>
<div class="container">
    <div class="row">
        <div class="col-lg-6 text-right">
            <form method="post">
                <label class="label" for="CategoryId" > Category Id </label>
                <input class="form-control" input type="number" id="CategoryId" name="CategoryId" max="10000" min="0" value="@Model.Id" required />
            <button type="submit" class="btn btn-success" > Details Getir</button>
            </form>
        </div>
        <div class="col-lg-md-6 left">

            <table class="table table-hover">
                <h2>Category Detail</h2>
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>:</td>
                        <td>@Model.Id</td>

                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>:</td>
                        <td>@Model.Name</td>

                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>:</td>
                        <td>@Model.Description</td>

                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>:</td>
                        <td>
                            @{
                                var status = Model.Status == true ? new[] { "btn-success", "Active" } : new[] { "btn-warning", "Passive" };
                            }
                            <a class="btn @status[0]">@status[1]</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>