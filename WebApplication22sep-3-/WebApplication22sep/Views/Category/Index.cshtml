@using WebApplication22sep.Models.EntityLayer;
@model List<Category>

@{
    ViewBag.Title = "Index";
}

<h2>Category List</h2>
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-right">
            <a class="btn btn-warning">@ViewBag.message</a>
        </div>
        <div class="col-lg-12">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>İşlem</th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>
                                    @{
                                        string[] status = item.Status == true ? new[] { "btn-success", "Active" } : new[] { "btn-warning", "Passive" };
                                    }
                                    <a class="btn @status[0]" href="#">@status[1]</a>
                                </td>
                                <td>
                                    <a href="/Home/Cat/Edit/@item.Id" class="btn btn-primary">Edit</a>
                                    <a href="/Home/Cat/Delete/@item.Id" class="btn btn-danger">Delete</a>
                                </td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>
                                <h2>Category list is empty.</h2>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

